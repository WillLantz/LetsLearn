        <Label x:Name="fUserAgeLbl" Content="" HorizontalAlignment="Left" Margin="119,98,0,0" VerticalAlignment="Top" Height="47" Width="76" Foreground="Red" FontWeight="Bold" FontSize="20"/>
        <Label x:Name="fCAnsLbl" Content="" HorizontalAlignment="Left" Margin="245,168,0,0" VerticalAlignment="Top" Height="47" Width="76" Foreground="Red" FontWeight="Bold" FontSize="20"/>
        <Label x:Name="fIncAnsLbl" Content="" HorizontalAlignment="Left" Margin="266,246,0,0" VerticalAlignment="Top" Height="47" Width="76" Foreground="Red" FontWeight="Bold" FontSize="20"/>
